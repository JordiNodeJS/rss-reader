# Google Gemini API Key (client-side - exposed to browser)
# Get your API key from: https://aistudio.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Gemini API key for server-side proxy (/api/summarize)
# This is used for the rate-limited free summarization endpoint
GEMINI_API_KEY=your_gemini_server_api_key_here

# Upstash Redis (rate limit persistence)
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Context7 API Key (for VS Code MCP)
# Get your API key from: https://context7.com/
CONTEXT7_API_KEY=your_context7_api_key_here

# PostgreSQL Database URL (for VS Code MCP)
# Format: postgres://user:password@host:port/database?sslmode=require
DATABASE_URL=your_database_url_here
